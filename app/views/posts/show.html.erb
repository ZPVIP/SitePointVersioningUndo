<div class="container">
  <h1><%= @post.title %></h1>

  <p><%= @post.body %></p>

  <div>
    <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary' %>
    <%= link_to 'Destroy', post_path(@post), class: 'btn btn-danger', method: :delete,
                confirm: 'Are you sure?' %>
  </div>
</div>